<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivEventPic"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tvImageText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/ivEventPic"
        android:layout_alignRight="@id/ivEventPic"
        android:layout_margin="3dp"
        android:gravity="center"
        android:textSize="30sp"
        android:text="FEB 15"/>

    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivEventPic"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:text="Event"/>

    <TextView
        android:id="@+id/tvEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivEventPic"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tvEventName"
        android:textSize="15sp"
        android:text="Time"/>


    <View
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="808080"
        android:layout_alignBottom="@id/tvImageText"
        />
    <View
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="808080"
        android:layout_marginTop="175dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignTop="@id/bottom_bar"
        android:id="@+id/Location-Time">


        <ImageView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_clock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Tue, 3 April at 6:30 PM"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_location"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Location"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:text="Bucksbaum 152 - Lawson Lecture Hall"
            android:textSize="15sp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
            android:textSize="15sp"
            android:scrollbars = "vertical"/>


    </LinearLayout>


</RelativeLayout>
