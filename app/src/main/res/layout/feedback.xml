<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvFeedbackHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/feedback_request"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_18"/>

    <EditText
        android:id="@+id/etFeedbackContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.EditText"
        android:padding="@dimen/padd_10"
        android:textSize="@dimen/txt_15"
        android:layout_below="@+id/tvFeedbackHeading"
        android:layout_marginTop="15dp"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/Feedback_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_below="@+id/etFeedbackContent"
        android:text="Send feedback"
        android:background="@color/colorScarlet"/>

</RelativeLayout>




